{
  "extends": "next/core-web-vitals",
  "plugins": ["eslint-plugin-import-helpers"],
  "rules": {
    "@next/next/no-img-element": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          ["module", "/^@prisma/"],
          "/css$/",
          "/^@/",
          ["parent", "sibling", "index"]
        ]
      }
    ],
    "jsx-a11y/alt-text": [
      "warn",
      {
        "img": ["Image", "WrappedImage"]
      }
    ]
  }
}
